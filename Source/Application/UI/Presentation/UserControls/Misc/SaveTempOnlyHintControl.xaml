<UserControl x:Class="pdfforge.PDFCreator.UI.Presentation.UserControls.Misc.SaveTempOnlyHintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:misc="clr-namespace:pdfforge.PDFCreator.UI.Presentation.UserControls.Misc"
             xmlns:help="clr-namespace:pdfforge.PDFCreator.UI.Presentation.Help"
             mc:Ignorable="d"
             x:Name="SetCommandHintControl"
             d:DataContext="{d:DesignInstance misc:DesignTimeSaveTempOnlyHintViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <misc:WarningIconControl  help:HelpProvider.HelpTopic="Convert" ToolTipText="{Binding Translation.SaveTempOnlyIsEnabled}" ApplicationCommand="{Binding SaveTempOnlyCommand, ElementName=SetCommandHintControl}" />
    </Grid>
</UserControl>
